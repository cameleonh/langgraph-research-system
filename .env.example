# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=8192
ANTHROPIC_TEMPERATURE=0.7

# PDF to Markdown Conversion (Marker)
MARKER_GPU_ENABLED=true
MARKER_BATCH_SIZE=10
MARKER_OUTPUT_FORMAT=markdown

# Vector Store Configuration (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=papers
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Web Search Configuration
SERPER_API_KEY=your_serper_api_key_here
WEB_SEARCH_MAX_RESULTS=10

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
MAX_CONVERSION_RETRIES=3
MAX_ANALYSIS_RETRIES=3

# Quality Check Thresholds
QUALITY_MIN_SUMMARY_LENGTH=100
QUALITY_MIN_ANALYSIS_ITEMS=3
QUALITY_MIN_DRAFT_LENGTH=500

# Output Configuration
OUTPUT_DIR=./output
MARKDOWN_OUTPUT_DIR=./output/markdown
ANALYSIS_OUTPUT_DIR=./output/analysis
